{
  "name": "node-handlebars-boilerplate",
  "version": "1.0.0",
  "description": "Project 2 Starter",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "lint": "eslint --quiet .",
    "fix": "eslint --fix .",
    "test": "npm run lint && cross-env NODE_ENV=test jest --runInBand"
  },
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "express-handlebars": "^5.3.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.4.0",
    "mailgun-js": "^0.22.0",
    "mysql2": "^1.6.5",
    "nodemailer": "^6.3.1",
    "react-scripts": "^3.1.2",
    "sequelize": "^5.19.1",
    "sequelize-cli": "^5.5.1"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2"
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --quiet .",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ]
  }
}
